<Application
    x:Class="PrintMersion_Manager_UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxm="using:Microsoft.UI.Xaml.Media"
   
    xmlns:local="using:PrintMersion_Manager_UWP"
   
    >

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Assets/ThemeLuxary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Defaults">
                    <AcrylicBrush x:Key="MyAcrylicBrush" BackgroundSource="HostBackdrop"  TintOpacity="0.6" TintColor="#FF000000" />
                    <AcrylicBrush x:Key="PMyellow" BackgroundSource="Backdrop" TintColor="#FFD1AD5C" />
                    <AcrylicBrush x:Key="PMBlue" TintColor="#FF0D182A" BackgroundSource="HostBackdrop" TintOpacity="0.75" />
                </ResourceDictionary>
             

            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
      
    </Application.Resources>



</Application>
